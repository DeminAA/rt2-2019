	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm3::FormCreate(TObject *Sender)
{
  StringGrid1->Cells[0][0]="№ по журналу";
  StringGrid1->Cells[1][0]="Текст";
  for (int i = 1; i < 19 ; i++) {
	StringGrid1->Cells[0][i] = i;
  }
}
